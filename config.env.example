# ===============================================
# AWS SQS DELETE SERVICE - DEPLOY CONFIGURATION
# ===============================================

# ==============
# DEPLOY CONFIG
# ==============

# Service name in Docker Swarm
SERVICE_NAME=aws-sqs-delete

# Application domain
DOMAIN=sqs-api.example.com

# Docker Swarm network name
NETWORK_NAME=network_swarm_public

# Log volume path on server
LOGS_VOLUME_PATH=/opt/docker/logs/aws-sqs

# Docker image name (without tag)
DOCKER_IMAGE=your-registry/aws-sqs-remove

# ==============
# DOCKER CONFIG
# ==============

# Node hostname where the service will run
NODE_HOSTNAME=node-01

# Container resources
CPU_LIMIT=1
MEMORY_LIMIT=1024M

# ==============
# AWS CONFIG
# ==============

# AWS credentials (replace with your values)
AWS_ACCESS_KEY_ID=AKIA_YOUR_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_DEFAULT_REGION=us-east-1

# ==============
# API CONFIG
# ==============

# API information
API_TITLE=AWS SQS Delete Service
API_DESCRIPTION=API to delete messages from Amazon SQS
API_PASSWORD=your_secure_password_here

# ==============
# TRAEFIK CONFIG
# ==============

# Traefik entrypoint
TRAEFIK_ENTRYPOINT=websecure

# Traefik cert resolver
TRAEFIK_CERT_RESOLVER=letsencryptresolver

# Container internal port
CONTAINER_PORT=80 